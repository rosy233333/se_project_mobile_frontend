/**index.wxss**/
@import "/images/iconfont1.wxss";
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}
.bg {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  /*z-index 较大的元素会覆盖较小的元素在上层进行显示*/
  z-index: -1;
}/*设置背景图片*/
.title {
  font-size: 25px;
  text-align: center;
  color: black;
}
.btn1:not([size='mini']){ 
  display: flex; 
  align-items: center; 
  justify-content: center; 
  background-color: rgb(96, 189, 9); 
  margin-top: 75rpx; 
  padding: 0rpx; 
  width:220rpx; 
  height:70rpx; 
  border-radius: 40rpx; 
  color: white; }
.btn2:not([size='mini']){ 
    display: flex; 
    align-items: center; 
    justify-content: center; 
    background-color: rgb(228, 83, 247); 
    margin-top: 25rpx; 
    padding: 0rpx; 
    width:200rpx; 
    height:70rpx; 
    border-radius: 40rpx; 
    color: white; }
.icon-paishe {
  width:60rpx;
  height:60rpx;
}
.showImg{
  width:600rpx;
  height:600rpx;
  margin-left: 75px;
  margin-top: 25rpx;
  border-radius:20rpx;
}
